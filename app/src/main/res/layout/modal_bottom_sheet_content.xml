<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/insert_task"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/bottom_sheet_edit_text_bg"
            android:hint="Input new task here"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="150dp"
            app:layout_constraintEnd_toEndOf="@id/insert_task"
            app:layout_constraintStart_toStartOf="@id/insert_task"
            app:layout_constraintTop_toBottomOf="@id/insert_task" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bottom_sheet_edit_text_bg"
            android:padding="8dp"
            android:text="No Category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/insert_task"
            app:layout_constraintTop_toBottomOf="@id/task_rv" />

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@id/category"
            app:layout_constraintStart_toEndOf="@id/category"
            app:layout_constraintTop_toTopOf="@id/category" />

        <ImageView
            android:id="@+id/add_sub_task"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:rotation="90"
            android:src="@drawable/ic_branch"
            app:layout_constraintBottom_toBottomOf="@id/calendar"
            app:layout_constraintStart_toEndOf="@id/calendar"
            app:layout_constraintTop_toTopOf="@id/calendar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/insert_task"
            app:layout_constraintTop_toBottomOf="@id/task_rv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>