<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/prev_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:rotation="90"
        android:src="@drawable/ic_arrow_drop_down"
        app:layout_constraintEnd_toStartOf="@+id/period"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/legendLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/prev_month"
        app:layout_constraintEnd_toStartOf="@+id/next_month"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/prev_month"
        app:layout_constraintTop_toTopOf="@id/prev_month"
        tools:text="NOVEMBER 2022" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/next_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:src="@drawable/ic_arrow_drop_down"
        app:layout_constraintBottom_toBottomOf="@id/period"
        app:layout_constraintEnd_toEndOf="@id/legendLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/period"
        app:layout_constraintTop_toTopOf="@id/period" />

    <include
        android:id="@+id/legendLayout"
        layout="@layout/calendar_day_legend_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/period" />

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/month_calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:layout_constraintEnd_toEndOf="@id/legendLayout"
        app:layout_constraintStart_toStartOf="@id/legendLayout"
        app:layout_constraintTop_toBottomOf="@id/legendLayout" />

    <TextView
        android:id="@+id/no_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="No Date"
        app:layout_constraintStart_toStartOf="@id/month_calendar"
        app:layout_constraintTop_toBottomOf="@id/month_calendar" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/no_date_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/no_date_tv"
        app:layout_constraintEnd_toEndOf="@id/month_calendar"
        app:layout_constraintTop_toTopOf="@id/no_date_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mod_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/no_date_switch"
        app:layout_constraintStart_toStartOf="@id/no_date_tv"
        app:layout_constraintTop_toBottomOf="@id/no_date_switch">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reminder_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_notification"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="Reminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/reminder_tv"
            app:layout_constraintTop_toBottomOf="@id/reminder_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/repeat_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_repeat"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="Repeat"
            app:layout_constraintEnd_toEndOf="@id/separator2"
            app:layout_constraintStart_toStartOf="@id/separator2"
            app:layout_constraintTop_toBottomOf="@id/separator2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/repeat_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/repeat_tv"
            app:layout_constraintEnd_toEndOf="@id/separator2"
            app:layout_constraintTop_toTopOf="@id/repeat_tv"
            tools:text="Daily" />

        <View
            android:id="@+id/separator3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@id/repeat_value_tv"
            app:layout_constraintStart_toStartOf="@id/repeat_tv"
            app:layout_constraintTop_toBottomOf="@id/repeat_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/done_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="DONE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mod_container"
        app:layout_constraintTop_toBottomOf="@id/mod_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="CANCEL"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/done_tv"
        app:layout_constraintEnd_toStartOf="@id/done_tv"
        app:layout_constraintTop_toTopOf="@id/done_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>